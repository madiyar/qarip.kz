---
const { title, description } = Astro.props;
---
<div class="border-b-2 border-brand-light/20">
  <button class="px-6 py-5 flex items-center justify-between w-full text-xl font-medium">
    {title}
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M5 12h14"/>
      <path d="M12 5v14" accordion-svg />
    </svg>
  </button>
  <p class="px-6 pb-6 font-light hidden" accordion-description>
    {description}
  </p>
</div>