---
import dayjs from 'dayjs';
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title}>
  <section class="max-w-7xl mx-auto dark:text-white">
    <h1 class="page-title mb-2">{frontmatter.title}</h1>
    {frontmatter.pubDate && (
      <p class="text-xl my-4">{dayjs(frontmatter.pubDate).format('DD.MM.YYYY')}</p>
    )}
    {frontmatter.description && (
      <p class="text-xl my-4">{frontmatter.description}</p>
    )}
    <hr class="my-5" />
    <div class="prose-lg md:prose-xl dark:prose-invert">
      <slot />
    </div>
  </section>
</Layout>
