---
import dayjs from 'dayjs';
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;

---

<Layout title={frontmatter.title}>
  <section class="max-w-7xl mx-auto dark:text-white">
    <h1 class="page-title mb-2">{frontmatter.title}</h1>
    <p>{dayjs(frontmatter.pubDate).format('DD.MM.YYYY')}</p>
    <p>Авторы: {frontmatter.author}</p>
    <nav class="flex flex-wrap gap-3 mt-4">
      <a href="/qaripter" class="tag">Қаріптер</a>
      {frontmatter.tags.map((tag: string) => (
        <a href="" class="tag">{tag}</a>
      ))}
    </nav>
    <hr class="my-5" />
    <!-- <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} /> -->
    <div class="prose dark:prose-invert">
      <slot />
    </div>
  </section>
</Layout>
<style>
  .tag {
    @apply bg-brand-light rounded-full text-white px-3 py-1;
    @apply hover:bg-brand-dark;
  }
</style>
